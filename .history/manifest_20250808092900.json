{
  "manifest_version": 3,
  "name": "Blocker Rice",
  "version": "1.0",
  "description": "Silencia automaticamente sites da lista.",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Bloquear som",
    "default_popup": "agradecimento.html"
  },
  "options_page": "options.html",
  "host_permissions": ["<all_urls>"]
}
